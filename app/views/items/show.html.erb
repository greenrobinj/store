

<h1><%= @department.name %> - <%= @item.name %></h1>
<p><%= @item.body %></p>

<h2>Comments</h2>

<% @item.comments.each do |comment| %>
  <%= render 'comments/comment', { comment: comment } %>
<% end %>
<hr/>
<%= link_to 'Edit Topic', edit_department_item_path([@department, @item]) %>
<%= link_to 'Delete Topic', [@department, @item], method: :delete %>
<%= link_to 'Back To Topics', department_item_path(@department) %>
<%= link_to 'Add Comment', new_item_comment_path(@item) %>
